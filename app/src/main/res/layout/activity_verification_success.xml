<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="32dp"
    tools:context=".VerificationSuccessActivity">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/success_icon"
        android:layout_marginBottom="32dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email Verified!"
        android:textColor="@color/md_theme_light_primary"
        android:textSize="28sp"
        android:fontFamily="@font/nunito_bold"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your email has been successfully verified.\nYou can now log in to your account."
        android:textColor="@color/md_theme_light_onSurface"
        android:textSize="16sp"
        android:fontFamily="@font/nunito_regular"
        android:textAlignment="center"
        android:layout_marginBottom="48dp" />

    <Button
        android:id="@+id/buttonContinue"
        style="@style/defaultBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_states"
        android:text="Continue to Login"
        android:textFontWeight="600" />

</LinearLayout>